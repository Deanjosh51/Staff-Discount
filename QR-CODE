<body>
  <h2>Enter PIN to Access</h2>
  <input type="password" id="pin" placeholder="PIN">
  <button onclick="checkPin()">Submit</button>

  <div id="secureContent" class="hidden">
    <p class="flashing">Verified Access - Staff Only</p>
    <img src="https://example.com/your-qr.png" alt="QR Code" width="200">
  </div>

  <script>
    function checkPin() {
      const input = document.getElementById('pin').value;
      if (input === '1234') {  // Change this PIN
        document.getElementById('secureContent').classList.remove('hidden');
      } else {
        alert('Incorrect PIN');
      }
    }
  </script>
